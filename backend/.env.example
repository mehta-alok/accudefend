# AccuDefend Chargeback Defense System - Environment Configuration
# Copy this file to .env and fill in your values

# =============================================================================
# APPLICATION
# =============================================================================
NODE_ENV=development
PORT=8000
API_VERSION=v1
APP_NAME=AccuDefend Chargeback Defense

# =============================================================================
# DATABASE (PostgreSQL)
# =============================================================================
DATABASE_URL=postgresql://accudefend_user:accudefend_password@localhost:5432/accudefend_chargeback?schema=public

# =============================================================================
# REDIS (Caching & Sessions)
# =============================================================================
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=

# =============================================================================
# JWT AUTHENTICATION
# =============================================================================
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_ACCESS_EXPIRY=15m
JWT_REFRESH_EXPIRY=7d

# =============================================================================
# AWS S3 (Evidence Storage)
# =============================================================================
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=accudefend-chargeback-evidence
AWS_S3_PRESIGNED_EXPIRY=3600

# =============================================================================
# PAYMENT PROCESSOR WEBHOOKS
# =============================================================================
# Stripe
STRIPE_SECRET_KEY=sk_test_xxxx
STRIPE_WEBHOOK_SECRET=whsec_xxxx

# Adyen
ADYEN_API_KEY=your-adyen-api-key
ADYEN_MERCHANT_ACCOUNT=AccuDefendHotels
ADYEN_HMAC_KEY=your-adyen-hmac-key

# Shift4
SHIFT4_SECRET_KEY=your-shift4-secret
SHIFT4_WEBHOOK_SECRET=your-shift4-webhook-secret

# Elavon
ELAVON_MERCHANT_ID=your-merchant-id
ELAVON_USER_ID=your-user-id
ELAVON_PIN=your-pin

# =============================================================================
# FRONTEND
# =============================================================================
FRONTEND_URL=http://localhost:3000
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# =============================================================================
# RATE LIMITING
# =============================================================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
AUTH_RATE_LIMIT_MAX_REQUESTS=20

# =============================================================================
# LOGGING
# =============================================================================
LOG_LEVEL=debug
LOG_FORMAT=combined

# =============================================================================
# SECURITY
# =============================================================================
BCRYPT_SALT_ROUNDS=12
